---
const posts = Object.values(
  await import.meta.glob("../content/proyectos/*.md", { eager: true })
);
---

<section id="proyectos" class="bg-neutral-200 pb-16">
  <h2 class="text-3xl font-medium tracking-wide text-verde text-center pt-12">
    Algunos de Nuestros Proyectos
  </h2>
  <hr class="w-16 border-t-2 border-verde my-4 mx-auto" />

  <!-- Swiper -->
  <div class="swiper mySwiper pt-12 pb-16">
    <div class="swiper-wrapper">
      {
        posts.map((post: any) => (
          <div class="swiper-slide grid grid-cols-12 shadow-xl">
            <div
              class="h-[466px] col-span-7 bg-cover"
              style={`background-image: url('${post.frontmatter.thumbnail}')`}
            />

            <div class="col-span-5 bg-white p-8 text-verde flex flex-col justify-between">
              <div class="">
                <small>{post.frontmatter.year}</small>
                <h4
                  class="font-medium text-xl"
                  set:html={post.frontmatter.title.replace(/\n/g, "<br />")}
                />
                <hr class="w-4 border-t-2 border-verde my-4" />
                <p class="text-neutral-500 font-light text-sm">
                  {post.frontmatter.description}
                </p>
              </div>

              <div class="">
                <p class="text-sm">
                  <strong>Total Superficie:</strong> {post.frontmatter.area}
                </p>
                <a
                  href="#modalProyecto"
                  data-lightbox="inline"
                  class="inline-block px-10 py-2 bg-verde text-white text-xs font-medium uppercase mt-4"
                >
                  Ver más
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <div class="swiper-button-next rounded-full hover:bg-verde">
      <img src="/img/forestal/elementos/plandemanejo-20.png" alt="" />
    </div>
    <div class="swiper-button-prev rounded-full hover:bg-verde">
      <img src="/img/forestal/elementos/plandemanejo-19.png" alt="" />
    </div>
    <div class="swiper-pagination"></div>
  </div>

  <div class="lightbox">
    <div class="absolute right-3 top-1">
      <button title="Close (Esc)" type="button" class="text-white text-3xl"
        >×</button
      >
    </div>
    <div class="w-full max-w-screen-lg bg-white">
      <div
        class="h-80 bg-[url(/uploads/2019/04/cerro_chena-slider1.jpg)] bg-cover"
      >
      </div>
      Cerro Chena
    </div>
  </div>
</section>

<!-- Swiper JS -->
<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script is:inline>
  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 2,
    spaceBetween: 0,
    centeredSlides: true,
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });

  // lightbox
  document.querySelectorAll("[data-lightbox=inline]").forEach((el) => {
    el.addEventListener("click", (e) => {
      e.preventDefault();
      document.querySelector(".lightbox").classList.add("active");
    });
  });

  // cerrar lightbox
  document.querySelector(".lightbox button").addEventListener("click", () => {
    document.querySelector(".lightbox").classList.remove("active");
  });
</script>

<style is:global>
  .swiper-backface-hidden .swiper-slide.swiper-slide-prev,
  .swiper-backface-hidden .swiper-slide.swiper-slide-next {
    transform: scale(0.9);
    opacity: 0.4;
  }
  .swiper-pagination-bullet-active {
    background-color: #375d3b;
  }
  .swiper-pagination-bullet {
    background-color: #375d3b;
  }
  .swiper-horizontal > .swiper-pagination-bullets .swiper-pagination-bullet,
  .swiper-pagination-horizontal.swiper-pagination-bullets
    .swiper-pagination-bullet {
    margin: 0 9px;
  }
  .swiper-button-prev:after,
  .swiper-rtl .swiper-button-next:after {
    content: "";
  }
  .swiper-button-next:after,
  .swiper-rtl .swiper-button-prev:after {
    content: "";
  }
  .swiper-button-next,
  .swiper-button-prev {
    width: 40px;
    height: 40px;
    transition: all 0.3s ease;
  }
  .swiper-button-prev {
    left: 15%;
  }
  .swiper-button-next {
    right: 15%;
  }
</style>
